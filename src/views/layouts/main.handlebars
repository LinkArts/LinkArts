<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LinkArts</title>
    <link rel="stylesheet" href="/css/styles.css">
    
    {{#if css}}
        <link rel="stylesheet" href="/css/{{css}}">
    {{/if}}

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
</head>

<body>
    <h2>LOGADO COMO: {{session.username}}</h2>
    <form action="/email" method="POST">
        <button type="submit">Enviar E-mail</button>
    </form>
    <a href="/profile/{{session.userid}}">Perfil</a>
    
    {{#if session.userid}}
    {{#unless hideNavbar}}
    {{> navbar}}
    {{/unless}}
    {{/if}}

    <div class="container" id="flash">
        {{#if message}}
        <div
            class="message {{#if (eq type 'error')}}message-error{{else}}{{#if (eq type 'notification')}}message-notification{{else}}message-success{{/if}}{{/if}}">
            {{message}}
        </div>
        {{/if}}
    </div>

    {{{ body }}}

    <script>
        const flashMessage = document.getElementById('flash');

        if (flashMessage)
        {
            flashMessage.style.transition = 'opacity 0.5s ease'; // Defina antes
            setTimeout(() =>
            {
                flashMessage.style.opacity = '0';

                setTimeout(() =>
                {
                    flashMessage.remove();
                }, 500);
            }, 3000);
        }
    </script>
</body>

</html>
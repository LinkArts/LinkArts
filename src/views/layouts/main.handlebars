<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LinkArts</title>
    <link rel="icon" type="image/png" href="/img/mini-logo.png">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/imageUpload.css">

    {{#if css}}
    <link rel="stylesheet" href="/css/{{css}}">
    {{/if}}

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&family=Poppins:wght@500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.min.js"></script>
    <script src="/js/imageUpload.js"></script>
</head>

<body>
    {{#if session.userid}}
    {{#unless hideNavbar}}
    {{> navbar}}
    {{/unless}}
    {{/if}}

    <div class="container" id="flash">
        {{#if message}}
        <div
            class="message {{#if (eq type 'error')}}message-error{{else}}{{#if (eq type 'notification')}}message-notification{{else}}message-success{{/if}}{{/if}}">
            {{message}}
        </div>
        {{/if}}
    </div>

    {{{ body }}}

    <script>
        const flashMessage = document.getElementById('flash');
        const searchInputMain = document.getElementById('search-input');

        if (flashMessage)
        {
            flashMessage.style.transition = 'opacity 0.5s ease';
            setTimeout(() =>
            {
                flashMessage.style.opacity = '0';

                setTimeout(() =>
                {
                    flashMessage.remove();
                }, 500);
            }, 3000);
        }

        if (searchInputMain)
        {
            searchInput.value = "{{{search}}}";
        }
    </script>
</body>

</html>
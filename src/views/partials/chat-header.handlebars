{{#if otherUser}}
<div class="chat-user" style="cursor: pointer; padding: 8px; border-radius: 8px; transition: background-color 0.2s ease;">
    <div class="profile-avatar" style="pointer-events: none; width: 40px; height: 40px; background: url('{{#if otherUser.imageUrl}}{{otherUser.imageUrl}}{{else}}/img/default.jpg{{/if}}') center/cover; border-radius: 50%;"></div>
    <div class="chat-user-info" style="pointer-events: none;">
        <div class="chat-user-name" style="pointer-events: none; font-size: 16px; font-weight: 600; color: #333; line-height: 1.2;">
            {{#if otherUser.name}}{{otherUser.name}}{{else}}Usuário desconhecido{{/if}}
        </div>
        {{#if otherUser.userType}}
            <div class="chat-user-type" style="pointer-events: none; font-size: 12px; color: #666; margin-top: 2px;">
                {{#if (eq otherUser.userType "artist")}}Artista{{else if (eq otherUser.userType "establishment")}}Estabelecimento{{else}}Usuário{{/if}}
            </div>
        {{else if otherUser.profession}}
            <div class="chat-user-type" style="pointer-events: none; font-size: 12px; color: #666; margin-top: 2px;">
                {{otherUser.profession}}
            </div>
        {{/if}}

    </div>
</div>
<button class="report-button">Reportar conversa</button>
{{else}}
<div class="chat-user">
    <div class="profile-avatar" style="width: 40px; height: 40px; background: url('/img/default.jpg') center/cover; border-radius: 50%;"></div>
    <div class="chat-user-info">
        <h3>Selecione uma conversa</h3>

    </div>
</div>
<button class="report-button" disabled>Reportar conversa</button>
{{/if}}


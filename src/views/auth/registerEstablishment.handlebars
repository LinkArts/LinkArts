<div class="all">
    <div class="cadastro-panel">
        <div class="cadastro-container">
            <!-- Logo -->
            <div class="logo-container">
                <img src="../img/logo.png" alt="logo" class="logo-auth">
            </div>

            <!-- Título -->
            <h2>Cadastro de Empresa</h2>

            <!-- Formulário -->
            <form>
                <div class="form-group">
                    <input id="nome" type="text" placeholder="Nome de usuário">
                </div>

                <div class="form-group">
                    <input id="email" type="email" placeholder="Email">
                </div>

                <div class="form-group">
                    <input id="telefone" type="tel" placeholder="Telefone">
                </div>

                <div class="form-group">
                    <input id="cnpj-field" type="text" placeholder="CNPJ">
                </div>

                <div class="form-group">
                    <input id="senha" type="password" placeholder="Senha">
                </div>

                <div class="form-group">
                    <input id="confirmar_senha" type="password" placeholder="Confirmar Senha">
                </div>

                <button type="button" class="cadastrar-button">
                    <span>Cadastrar</span>
                </button>

                <div class="form-footer">
                    <span>Já tem uma conta?</span>
                    <a href="/login" class="login-link">Entrar</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Painel direito - Imagem de boas-vindas -->
    <div class="welcome-panel">
        <div class="welcome-container">
            <h1>Bem-vindo, Artista!</h1>
            <img width="100%" height="100%" viewBox="0 0 500 500" src="../img/imgEmpresa.png" alt="Imagem de Artista">
            </img>
        </div>
    </div>
</div>

<script>
    $(document).ready(function ()
    {
        $('#cnpj-field').mask('00.000.000/0000-00');
        $('#telefone').mask('(00) 00000-0000');
    });
</script>
<div class="all">
    <div class="login-panel">
        <div class="login-container">
            <!-- Logo -->
            <div class="logo-container">
                <img src="../img/logo.png" alt="logo" class="logo-auth">
            </div>

            <!-- Título -->
            <h2>Faça seu Login</h2>

            <!-- Formulário -->
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" type="email" name="email" placeholder="Email">
                </div>

                <div class="form-group">
                    <label for="password">Senha</label>
                    <input id="password" type="password" name="password" placeholder="Senha">
                </div>

                <button type="submit" class="login-button">
                    <span>Login</span>
                </button>

                <div class="forgot-password">
                    <a href="/alterar-senha">Recuperar minha senha</a>
                </div>
            </form>

            <!-- Separador -->
            <div class="separator">
                <span>ou</span>
            </div>

            <!-- Opções de cadastro -->
            <div class="register-options">
                <h3>Cadastre-se como</h3>
                <a href="/registro-artista"><button class="register-button" href="/registro-artista">Artista</button></a>
                <a href="/registro-estabelecimento"><button class="register-button">Estabelecimento</button></a>
            </div>
        </div>
    </div>

    <!-- Painel direito - Imagem de boas-vindas -->
    <div class="welcome-panel">
        <div class="welcome-container">
            <h1>Bem-vindo de volta!</h1>
            <img width="100%" height="100%" viewBox="0 0 500 500" src="../img/dj-ilustracao.png" alt="Imagem de Artista">
            </img>
        </div>
    </div>
</div>
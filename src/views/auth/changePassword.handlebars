<script>
    function enviarEmail()
    {
        const emailInput = document.getElementById('psw-email-input');
        const email = emailInput.value.trim();
        const infoText = document.querySelector('.psw-info-notification');

        if (email === "")
        {
            alert("Por favor, insira um email válido.");
            return;
        }

        fetch('/enviar-email', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email })
        })
            .then(res => res.json())
            .then(data =>
            {
                if (data.redirect)
                {
                    window.location.href = data.redirect;
                    return;
                }

                infoText.textContent = data.message;
                console.log("Email enviado para:", email);

                document.getElementById('psw-email-section').style.display = 'none';
                document.getElementById('psw-codigo-section').style.display = 'block';

                iniciarContador();
            })
            .catch(err => console.error("Erro ao enviar email:", err));
    }

    function iniciarContador()
    {
        const btnReenviar = document.querySelector('.psw-resend-button');
        const infoText = document.querySelector('.psw-info-text');
        let segundos = 30;

        const intervalo = setInterval(() =>
        {
            segundos--;
            infoText.textContent = `Disponível para reenvio em ${ segundos } segundos...`;

            if (segundos <= 0)
            {
                clearInterval(intervalo);
                btnReenviar.disabled = false;
                btnReenviar.style.cursor = 'pointer';
                btnReenviar.style.opacity = '1';
                infoText.textContent = "Você pode reenviar o código agora.";
            }
        }, 1000);
    }

    function alterarSenha()
    {
        const code = document.getElementById('psw-code-input').value.toUpperCase();
        const password = document.getElementById('psw-password-input').value;
        const confirmPassword = document.getElementById('psw-confirmPassword-input').value;
        const emailInput = document.getElementById('psw-email-input');
        const email = emailInput.value.trim();

        if (password === '' || confirmPassword === '')
        {
            alert('Todos os campos são obrigatórios!')
            return;
        }

        fetch('/alterar-senha', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email, code, password, confirmPassword })
        })
            .then(res => res.json())
            .then(data =>
            {
                window.location.href = data.redirect;
            })
            .catch(err => console.error("Erro:", err));
    }
</script>